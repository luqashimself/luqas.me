#booster
    if message.content.startswith(".booster"):
        embed = discord.Embed(color=0xa29bfe)
        embed.set_image(url="https://cdn.discordapp.com/attachments/682076297849340072/952849700388761610/Server_Nitro_Status_-_Color.png")
        embed.add_field(name="Server Booster", value="Eine Möglichkeit den Server zu unterstützen!", inline=False)
        embed.add_field(name="Booster Vorteile", value="10% XP Boost - Eigene Farbe - Link & Bildrechte im Mainchat")
        await message.channel.send(embed=embed)

#selfroles age
    if message.content.startswith(".age"):
        embed = discord.Embed(color=0xa29bfe)
        embed.add_field(name="Alter", value="Wähle dein Alter aus", inline=False)
        embed.add_field(name="🐟", value="12+", inline=True)
        embed.add_field(name="🐬", value="16+", inline=True)
        embed.add_field(name="🐳", value="18+", inline=True)
        await message.channel.send(embed=embed)

#selfroles topics
    if message.content.startswith(".topics"):
        embed = discord.Embed(color=0xa29bfe)
        embed.add_field(name="Themen", value="Interessierst du dich für eines dieser Themen?", inline=False)
        embed.add_field(name="💻", value="Tech", inline=True)
        embed.add_field(name="🌮", value="Essen", inline=True)
        embed.add_field(name="👜", value="Mode", inline=True)
        await message.channel.send(embed=embed)
